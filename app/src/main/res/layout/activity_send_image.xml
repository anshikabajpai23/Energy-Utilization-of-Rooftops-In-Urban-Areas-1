<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#283040"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SendImageActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_height="200dp">
            <ImageView
                android:layout_width="200dp"
                android:scaleType="centerCrop"
                android:layout_height="200dp"
                android:src="@drawable/click_image" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />



    </LinearLayout>

    <Button
        android:id="@+id/imageEastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/ic_proceed_to_pay"
        android:paddingHorizontal="24dp"
        android:text="Click Images of my rooftop"
        android:textColor="@android:color/white" />




    <Button
        android:id="@+id/imageWestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/ic_proceed_to_pay"
        android:padding="4dp"
        android:text="Click Images of my balcony"
        android:textColor="@android:color/white"
        android:visibility="visible" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Previous Result"
        android:id="@+id/tv_result"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_new_releases_black_24dp"
        android:gravity="center_vertical"
        android:layout_margin="12dp"/>



</LinearLayout>